{  
  "suggest.echodocSupport": true,
  "suggest.maxCompleteItemCount": 40,

  "coc.preferences.formatOnSaveFiletypes": ["go", "python", "json"],
  // "coc.preferences.formatOnSaveFiletypes": ["javascript", "typescript", "typescriptreact", "json", "javascriptreact", "go"],

	"languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "disableWorkspaceFolders": true,
      "filetypes": ["go"]
    },
    "flow": {
      "command": "flow",
      "args": ["lsp"],
      "filetypes": ["javascript", "javascriptreact"],
      "initializationOptions": {},
      "requireRootPattern": true,
      "settings": {},
      "rootPatterns": [".flowconfig"]
    },
    "rust": {
      "command": "rust-analyzer",
      "filetypes": ["rust"],
      "rootPatterns": ["Cargo.toml"]
    }
  },
  "python.formatting.provider": "black",

  "diagnostic.enableMessage": "always",
  "diagnostic.errorSign": "X",
  "diagnostic.hintSign": ">>",
  "diagnostic.infoSign": ">>",
  "diagnostic.warningSign": "âš ",
  "signature.hideOnTextChange": true
}
